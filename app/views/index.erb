<div class="container">
  <h1 id="greeting">Your Tasks for this Week</h1>
</div>
<div class="container" style="margin-left: 24px" id="task_list">
  <% @tasks.each_with_index do |task, i| %>
    <h3><%= i+1 %>. <a href="/tasks/<%= task.id %>" style="color: black"><%= task.title %></a></h3>
    <form action="/tasks/<%= task.id %>" method="POST">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" class="btn btn-info" value="Completed"/>
    </form>
  <% end %>
</div>
