<form action="/tasks/<%= @task.id %>" method="POST" class="container" style="padding-top: 12px">
  <h3>Edit task:</h3>
  <input type="hidden" name="_method" value="PUT">
  <input type='text' name='task[title]' value= '<%=@task.title%>'/><br/><br/>
  <textarea name='task[description]'><%= @task.description%></textarea><br/><br/>
  <input type='submit' class="btn btn-info"/>
</form>
